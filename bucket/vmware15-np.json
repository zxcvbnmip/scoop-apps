        "    exit 1",
        "}",
        "if ($cmd -eq 'uninstall') {",
        "   Invoke-ExternalCommand \"$dir\\installer.exe\" -ArgumentList @('/s', '/v', \"`\"/qn REMOVE=ALL`\"\") -RunAs",
        "   Start-Sleep -Seconds 2",
        "   Write-Host \"Please restart your computer to uninstall $app properly\" -F 'Red'",
