{
    "version": "2.1.8.4",
    "description": "功能强大使用简单的截图/贴图工具，帮助你提高效率",
    "homepage": "https://pixpinapp.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "http://qt.io/licensing/"
    },
    "url": "https://download.pixpinapp.com/PixPin_cn_zh-cn_2.1.8.4.zip",
    "hash": "0f5dee0f1e0cd8c40e036bb7aef437fe0d30451c6efffa277de3b658d45350a5",
    "extract_dir": "PixPin",
    "persist": [
        "History",
        "Data",
        "Config"
    ],
    "shortcuts": [
        [
            "PixPin.exe",
            "PixPin"
        ]
    ],
    "pre_install": [
        "ensure \"$persist_dir\\Config\"",
        "if (!(Test-Path \"$persist_dir\\Config\\PixPinConfig.json\") -or !(Get-Item \"$persist_dir\\Config\\PixPinConfig.json\").Length) {",
        "    New-Item \"$persist_dir\\Config\\PixPinConfig.json\" -ItemType File -Force -ErrorAction SilentlyContinue | Out-Null",
        "    Set-Content -Path \"$persist_dir\\Config\\PixPinConfig.json\" -Value '{\"System.Crash feedback.UploadCrashInformation\":{\"t\":1735664461,\"v\":false},\"System.Update.UpgradeMode#s.win\":{\"t\":1735664461,\"v\":0}}'",
        "}",
        "if (!(Test-Path \"$dir\\LocalStorage.data\") -or !(Get-Item \"$dir\\LocalStorage.data\").Length) {",
        "    New-Item \"$dir\\LocalStorage.data\" -ItemType File -Force -ErrorAction SilentlyContinue | Out-Null",
        "    Set-Content -Path \"$dir\\LocalStorage.data\" -Value \"[General]`nIsFirstRun=false`ndevID=$((New-Guid).Guid)\"",
        "}"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Stop-App"
    ],
    "checkver": {
        "url": "https://api.viewdepth.cn/app_info?app_id=pixpin&update_type=0&sys=win&ver=0",
        "jsonpath": "$.ver_info.version"
    },
    "autoupdate": {
        "url": "https://download.pixpinapp.com/PixPin_cn_zh-cn_$version.zip"
    }
}
