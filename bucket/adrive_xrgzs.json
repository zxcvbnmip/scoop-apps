{
    "version": "6.8.0",
    "description": "阿里云盘是一款速度快、不打扰、够安全、易于分享的网盘，你可以在这里存储、管理和探索内容，尽情打造丰富的数字世界。",
    "homepage": "https://www.alipan.com/",
    "license": {
        "identifier": "EULA",
        "url": "https://www.alipan.com/protocol/service"
    },
    "architecture": {
        "64bit": {
            "url": "https://cdn.aliyundrive.net/downloads/apps/desktop/update/6.8.0/win32/x64/aDrive-6.8.0.exe#/dl.7z",
            "hash": "sha512:dcdf47aa0db3e2d410312efbf4f58636fad38a073ac9ebbd76f946d12b8e30a006387a5bd6473e778d5f6fce3f704d8a3c5369039f58630fc008809a4fcab268"
        }
    },
    "shortcuts": [
        [
            "aDrive.exe",
            "阿里云盘"
        ]
    ],
    "post_install": [
        "Remove-Item \"$dir\\`$*\" -Recurse -Force",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "New-PersistDirectory \"$env:APPDATA\\aDrive\" \"$persist_dir\\AppData\" -Migrate"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Stop-App",
        "Remove-Junction \"$env:APPDATA\\aDrive\""
    ],
    "checkver": {
        "script": [
            "$UrlPrefix = (Invoke-RestMethod 'https://www.alipan.com/desktop/version/update.json').url",
            "Invoke-RestMethod \"$UrlPrefix/win32/x64/latest.yml\""
        ],
        "regex": "version: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.aliyundrive.net/downloads/apps/desktop/update/$version/win32/x64/aDrive-$version.exe#/dl.7z",
                "hash": {
                    "url": "https://g.alicdn.com/aliyun-drive-fe/aliyun-drive-desktop-version/$version/win32/x64/latest.yml",
                    "mode": "extract",
                    "regex": "sha512: $base64"
                }
            }
        }
    }
}
