            "@=\"\\\"$($dir -replace '\\\\','\\\\')\\\\sublime_text.exe\\\" \\\"%1\\\"\"",
            "",
            "[$registry_scope\\SOFTWARE\\Classes\\Directory\\shell\\Sublime Text]",
            "@=\"使用 &Sublime Text 4 打开\"",
            "\"icon\"=\"$($dir -replace '\\\\','\\\\')\\\\sublime_text.exe\"",
