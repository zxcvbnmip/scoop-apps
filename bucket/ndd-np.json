{
    "version": "3.6.3",
    "description": "一个支持windows/linux/mac的文本编辑器，目标是要替换notepad++，来自中国。",
    "homepage": "https://gitee.com/cxasm/notepad--",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://gitee.com/cxasm/notepad--/releases/download/v3.6.3/Notepad--v3.6.3-plugin-Installer.exe",
            "hash": "7bf9ce044ad6962c49e9131cec019a282bd60b5a6be0e17ebeb0d9ccadd480e3"
        }
    },
    "bin": [
        "Notepad--.exe",
        [
            "Notepad--.exe",
            "ndd"
        ]
    ],
    "shortcuts": [
        [
            "Notepad--.exe",
            "Notepad--"
        ]
    ],
    "checkver": {
        "url": "https://gitee.com/cxasm/notepad--/releases",
        "regex": "(?<path>/cxasm/notepad--/releases/download/v.*/Notepad--v(.*)-plugin-Installer\\.exe)"
    },
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "New-PersistDirectory \"$env:APPDATA\\notepad\" \"$persist_dir\\AppData\" -Migrate"
    ],
    "installer": {
        "args": [
            "/VERYSILENT",
            "/FORCECLOSEAPPLICATIONS",
            "/NORESTART",
            "/TASKS=\"\"",
            "/DIR=\"$dir\"",
            "/CURRENTUSER"
        ]
    },
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Remove-Junction \"$env:APPDATA\\notepad\"",
        "Stop-App"
    ],
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/VERYSILENT",
            "/FORCECLOSEAPPLICATIONS",
            "/NORESTART"
        ]
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gitee.com$matchPath"
            }
        },
        "extract_dir": "Notepad--v$version-win10-portable"
    }
}
