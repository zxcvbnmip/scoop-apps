{
    "version": "0.1.0",
    "description": "Python Version Manager for Windows, inspired by pyenv and nvm.",
    "homepage": "https://github.com/akirco/pyvm/",
    "license": "Freeware",
    "url": "https://github.com/akirco/pyvm/archive/main.zip",
    "hash": "0852ea336d9302a234cfd0b635b408490c36034f5e5cd02d6400a316d22e55e8",
    "extract_dir": "pyvm-main",
    "env_add_path": [
        "python\\current\\Scripts",
        "python\\current"
    ],
    "persist": [
        "python\\caches",
        "python\\versions"
    ],
    "bin": "bin\\pyvm.ps1",
    "depends": [
        "main/gpg"
    ],
    "notes": [
        "it's developing now.",
        "if you want vscode to recognize the python interpreter, you can run:",
        "pyvm install 3.13.1 && pyvm use 3.13.1",
        "scoop shim add python \"$(scoop prefix pyvm)\\python\\current\\python.exe\""
    ]
}