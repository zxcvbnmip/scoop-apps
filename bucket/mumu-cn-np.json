{
    "version": "5.8.3.1934",
    "description": "(sudo) MuMu模拟器12 大屏超级炫 手游不受限 安卓12 | 标签拖动分屏 | 自定义应用保活 | 自由多开。",
    "homepage": "https://mumu.163.com",
    "license": {
        "identifier": "Freeware",
        "url": "https://mumu.163.com/sdk/privacy/index.html"
    },
    "url": "http://a11.gdl.netease.com/MuMu-setup-V5.8.3.1934-1023153113.exe#/installer.exe",
    "hash": "md5:d2ea69b6ff059ed75c519a8bca522122",
    "persist": [
        "configs",
        "vms"
    ],
    "shortcuts": [
        [
            "nx_main\\MuMuNxMain.exe",
            "MuMu模拟器"
        ]
    ],
    "installer": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to install $app.\"",
            "    scoop uninstall $app",
            "    exit 1",
            "}",
            "Invoke-ExternalCommand \"$dir\\installer.exe\" -ArgumentList @('/S', '/auto_start=false', \"/D=$dir\") -RunAs",
            "Remove-Item \"$dir\\installer.exe\" -Force -ErrorAction SilentlyContinue | Out-Null"
        ]
    },
    "post_install": [
        "Remove-Item \"$dir\\nx_main\\MuMuNxUpdater.exe\" -Force -ErrorAction SilentlyContinue | Out-Null",
        "Remove-Item \"$env:APPDATA\\Netease\\MuMuPlayer\\data\\startupImage\" -Force -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$env:APPDATA\\Netease\\MuMuPlayer\\data\" -Name 'startupImage' -ItemType Directory -Force -ErrorAction SilentlyContinue | Out-Null",
        "Remove-Item \"$env:APPDATA\\Netease\\MuMuPlayer\\data\\msgCenter\" -Force -ErrorAction SilentlyContinue | Out-Null",
        "New-Item \"$env:APPDATA\\Netease\\MuMuPlayer\\data\" -Name 'msgCenter' -ItemType Directory -Force -ErrorAction SilentlyContinue | Out-Null"
    ],
    "pre_uninstall": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to uninstall $app.\"",
        "    exit 1",
        "}",
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Stop-App",
        "unlink_persist_data $manifest $dir",
        "Invoke-ExternalCommand \"$dir\\uninstall.exe\" -ArgumentList '/S /no_browser' -RunAs",
        "Start-Sleep -Seconds 10"
    ],
    "checkver": {
        "script": [
            "$response = Invoke-RestMethod -Uri 'https://mumu.nie.netease.com/api/v1/download/nx' -Method Post -Form @{",
            "    architecture = 'x86_64'",
            "    machine      = '\"\"'",
            "}",
            "$response.data.version + '=====' + $response.data.mumu.checksum + '=====' + $response.data.mumu.link"
        ],
        "regex": "(.*)=====(?<md5>.*)=====(?<url>.*)"
    },
    "autoupdate": {
        "url": "$matchUrl#/installer.exe",
        "hash": {
            "url": "https://httpbin.org/get?md5=$matchMd5",
            "jsonpath": "$.args.md5"
        }
    }
}
